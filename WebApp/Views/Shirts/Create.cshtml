@model Shirt

<h3>Create Shirt</h3>
<br />
<form method="post" asp-action="Create">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Brand" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Brand" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Brand" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Color" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Color" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Color" />
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Gender" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Gender" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Gender" />
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Size" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Size" class="form-control" min="1" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Size" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <label asp-for="Price" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Price" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="Price" />
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-2">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>